{
  "extends": "./tsconfig.json",
  "include": ["src"],
  "exclude": ["npm", "tests"],
  "compilerOptions": {
    "declaration": true,
    "declarationMap": false,
    "emitDeclarationOnly": true,
    "jsx": "react-jsx",
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": false,
    "outDir": "npm/types"
  }
}
